<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:account="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="date"
            type="String" />

        <variable
            name="money"
            type="String" />

        <variable
            name="isConsumption"
            type="Boolean" />

        <variable
            name="category"
            type="String" />

        <variable
            name="categoryColor"
            type="Integer" />

        <variable
            name="memo"
            type="String" />

        <variable
            name="model"
            type="kr.timoky.domain.model.base.ExpenseModel" />

        <variable
            name="listener"
            type="kr.timoky.accountbook.view.list.adapter.ExpenseListAdapter.ItemListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> listener.onRootClick(model)}">

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{date}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="5월 13일" />

            <TextView
                android:id="@+id/categoryTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_5dp"
                account:backgroundTint="@{categoryColor}"
                android:backgroundTintMode="add"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                android:text="@{category}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:backgroundTint="@android:color/darker_gray"
                tools:text="외식" />

            <TextView
                android:id="@+id/moneyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{money}"
                android:textColor="@{isConsumption ? @android:color/holo_blue_dark : @android:color/holo_red_light}"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/dateTv"
                app:layout_constraintTop_toBottomOf="@+id/dateTv"
                tools:text="-10,000원"
                tools:textColor="@android:color/holo_red_light" />

            <View
                android:id="@+id/divideLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/moneyTv" />

            <TextView
                android:id="@+id/memoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/str_memo"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/dateTv"
                app:layout_constraintTop_toBottomOf="@+id/divideLine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{memo}"
                app:layout_constraintTop_toBottomOf="@+id/memoTitle"
                tools:text="메모 내용 표시" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>